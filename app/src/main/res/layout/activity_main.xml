<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hangman"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="70dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="647dp"
        android:layout_gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="415dp"
            android:layout_height="818dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.707">


            <Button
                android:id="@+id/singlePlayerButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20px"
                android:text="Singleplayer"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/multiPlayerButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20px"
                android:text="Multiplayer"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/instructionsButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20px"
                android:text="Instructions"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/wordlistButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20px"
                android:text="Wordlist"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/optionsButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20px"
                android:text="Options"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/shutdownButton"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20px"
                android:text="Quit"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>